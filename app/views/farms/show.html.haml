.row
  .span12
    .span5
      = render 'farm_carousel'
      / .row
      / %iframe{:allowfullscreen => "", :frameborder => "0", :height => "360", :src => "https://www.youtube.com/embed/iiuP3ylemaw?feature=player_embedded", :width => "400"}
    .span5


      %p
        %b Coconut type:
        = @farm.fruit
      %p
        %b Community:
        = @farm.community_id
      %p
        %b Planted on:
        = @farm.planted_on
      %p
        %b Area:
        = @farm.area
      %p
        %b Soil type:
        = @farm.soil_type
      %p
        %b Name:
        = @farm.name
      %p
        %b Description:
        = @farm.description

      = link_to 'Edit', edit_farm_path(@farm)
      \|
      = link_to 'Back', farms_path
